generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
}

model Department {
  id        String     @id @default(uuid())
  name      String
  employees Employee[]
}

model Employee {
  id           String         @id @default(uuid())
  matricula    String
  name         String
  email        String         @unique
  cpf          String         @unique
  hiredAt      DateTime
  status       EmployeeStatus @default(ACTIVE)
  departmentId String?
  department   Department?    @relation(fields: [departmentId], references: [id])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([departmentId])
}

model Clock {
  id        String   @id @default(uuid())
  serial    String   @unique
  location  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
